    <%= render 'navbar', :locals => {:page => 'home.html'} %>
    
    <div class="container animsition">

    	<h4>ULTIMO AGGIORNAMENTO : <quote id=data></quote><br><br><quote id=dataswatch></quote></h4>
		
		<div class="row">
			<!-- Inizio temperatura esterna -->
			<div class="col-sm-3">
				<h3>Temperatura esterna</h3>
				<div id="termometroesterno" class=termometro></div><br>
				<p class=termometrodesc><h4><span id=tempesterna /></h4></p>
			</div>
			
			<!-- Inizio temperatura interna -->
			<div class="col-sm-3">
				<h3>Temperatura interna</h3>
				<div id="termometrointerno" class=termometro></div><br>
				<p class=termometrodesc><h4><span id=tempinterna /></h4></p>
			</div>
			
			<!-- Inizio umidita esterna -->
			<div class="col-sm-3">
				<h3>Umidita esterna</h3>
				<div id="gaugeumiditaesterna" class=gauge></div><br>
				<p class=termometrodesc><h4><span id=umiesterna /></h4></p>
			</div>
			
			<!-- Inizio umidita interna -->
			<div class="col-sm-3">
				<h3>Umidita interna</h3>
				<div id="gaugeumiditainterna" class=gauge></div><br>
				<p class=termometrodesc><h4><span id=umiinterna /></h4></p>
			</div>
		</div>

		<div class="row">
			<!-- Inizio pressione -->
			<div class="col-sm-4">
				<h3>Pressione</h3>
				<div id="gaugepressione" class=gauge></div><br>
				<p class=termometrodesc><h4><span id=pressione /></h4></p>
			</div>
			<!-- Inizio vento -->
			<div class="col-sm-4">
				<h3>Vento</h3>
				<div id="gaugevento" class=gauge></div><br>
				<p class=termometrodesc><h4>Vento Medio : <span id=ventomedio /></h4>
				<p class=termometrodesc><h4>Vento Raffica : <span id=ventoraffica></span></h4></p>
			</div>
			<!-- Inizio pioggia -->
			<div class="col-sm-4">
				<h3>Pioggia</h3>
				<div id="termometropioggia" class=termometro></div><br>
				<p class=termometrodesc><h4>Pioggia di oggi : <span id=pioggiamezzanotte /></h4></p>
			</div>
		</div>
	</div>	
	
